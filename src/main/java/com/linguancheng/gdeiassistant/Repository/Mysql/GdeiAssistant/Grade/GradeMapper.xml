<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.linguancheng.gdeiassistant.Repository.Mysql.GdeiAssistant.Grade.GradeMapper">

    <!-- 开启GradeMapper namespace下的二级缓存 -->
    <cache/>

    <select id="selectGrade" parameterType="java.lang.String"
            resultType="com.linguancheng.gdeiassistant.Pojo.GradeQuery.GradeQuery">
        select * from grade where username=#{username} limit 1
    </select>

    <insert id="insertGrade">
        insert into grade (username,grade) values(#{username},#{grade})
    </insert>

    <update id="updateGrade">
        update grade set grade=#{grade} where username=#{username}
    </update>

</mapper>